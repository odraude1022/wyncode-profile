<div class="row form-group">
  <div class="col-md-6 col-md-offset-3 m-3">
    <%= form_for(@user) do |f| %>

      <%= f.label :first_name, class: "mt-3" %>
      <%= f.text_field :first_name, class: "form-control" %>

      <%= f.label :last_name, class: "mt-3" %>
      <%= f.text_field :last_name, class: "form-control" %>

      <%= f.label :email, class: "mt-3" %>
      <%= f.email_field :email, class: "form-control" %>

      <%= f.label :cohort, class: "mt-3" %>
      <%= f.number_field :cohort, class: "form-control" %>

      <%= f.submit "Save Changes", class: "btn btn-success btn-lg btn-block mt-3 mb-3" %>

    <% end %>
  </div>
  <%= link_to 'Delete My Profile',
        @user,
        method: :delete,
        data: { confirm: 'Are you sure?' },
        class: "btn btn-danger btn-sm" %>
</div>
